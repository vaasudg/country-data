# Step 1: Install dependencies
echo "Installing dependencies..."
npm install --legacy-peer-deps || { echo "âŒ Dependency installation failed"; exit 1; }

# Step 2: Run linting
echo "Linting the backend..."
npx nx lint backend || { echo "âŒ Linting failed"; exit 1; }

# Step 3: Build the frontend
