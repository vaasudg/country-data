npx nx build backend || { echo "âŒ Backend build failed"; exit 1; }

# Success animation
show_success_message() {
  echo -n "Running checks"
  for i in {5..1}; do
    echo -n "*"
    sleep 0.1
  done

  echo -e "\nğŸ‰  All checks passed!... Proceeding with push. Great job! ğŸš€"
